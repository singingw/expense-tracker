<div class="col-md-6 m-auto">
  <!-- Select category -->
  <form action="/" method="POST">
    <select name="categorySelect" id="categorySelect" onchange="categorySelect.form.submit()" class="form-control">
      {{#if categorySelect}}
      <option value="{{categorySelect}}" selected>{{categorySelect}}</option>
      {{else}}
      <option value="全部" selected>全部</option>
      {{/if}}
      {{#each categories}}
      <option value="{{this.name}}">{{this.name}}</option>
      {{/each}}
    </select>
  </form>

  <!-- total Amount -->
  <div class="mt-3 d-flex justify-content-between">
    <div style="font-size: 20px;">總金額:</div>
    <div style="font-size: 85px; color: #ff6200;">$
      {{totalAmount}}
    </div>
  </div>

  <!-- list -->
  <div class="list-group">
    {{#each records}}
    <div class="d-flex justify-content-between align-items-center list-group-item list-group-item-action">
      <!-- name -->
      <div class="d-flex justify-content-center align-items-center">
        <i class="{{ this.icon }} mx-2" style="color: #00d8f9;font-size:150%;"></i>
        <div class="col d-flex flex-column align-item-center">
          <span style="font-size:120%;">{{this.name}}</span>
          <span style="font-size:80%;">{{this.date}}</span>
        </div>
      </div>

      <!-- amount -->
      <div style="font-size:110%;">
        {{this.amount}}
      </div>

      <!-- edit delete -->
      <div class="d-flex justify-content-center">
        <a href="/records/{{ this._id }}/edit">
          <i class="fa fa-pencil" style="color: #626466; font-size: 120%;"></i>
        </a>
        <form action="/records/{{ this._id }}?_method=DELETE" method="post">
          <button type="submit" class="btn">
            <i class="fa-solid fa-trash-can" style="color: #626466; font-size: 120%;"></i></button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="mt-5 d-flex justify-content-center">
    <a class="btn"
      style="background-color: #ff6200;color: white; font-size: 16px; width: 40vw;max-width: 300px;border-color:black;"
      href="/records/new">新增支出</a>
  </div>
</div>